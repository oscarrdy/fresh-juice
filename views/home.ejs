  <section class="sec_recipes" id="sec_recipes">
    <h2>Get Inspired by our Recipes</h2>
    <div class="swiper-container swiper_recipes_container">
      <div class="swiper swiper_recipes">
        <div class="swiper-wrapper" id="swiper_recipes_slides_container"></div>
      </div>
      <div class="swiper-button-next swiper_recipes_button_next"></div>
      <div class="swiper-button-prev swiper_recipes_button_prev"></div>
      <div class="swiper-pagination swiper_recipes_pagination" id="swiper_recipes_pagination"></div>
    </div>
  </section>

  <!-- Footer -->
  <%- include("components/footer") %>
  
